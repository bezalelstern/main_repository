
 @model IEnumerable<Library.Models.Shelf>

@{
    ViewData["Title"] = "Shelf Details";
}

<h1>Shelf Details</h1>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Height)</th>
            <th>@Html.DisplayNameFor(model => model.Width)</th>
            <th>@Html.DisplayNameFor(model => model.GenreId)</th>
            <th>@Html.DisplayName("Books Count")</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var shelf in Model)
        {
            <tr>
                <td>@shelf.Id</td>
                <td>@shelf.Height</td>
                <td>@shelf.Width</td>
                <td>@shelf.GenreId</td>
                <td>@shelf.Book?.Count</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index">Back to List</a>
</div>
